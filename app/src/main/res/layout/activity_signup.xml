<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_bg"
    tools:context=".authActivity.signup">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CampusConnect"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <!-- Signup Card -->
    <LinearLayout
        android:id="@+id/signupCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:padding="24dp"
        android:background="@drawable/rounded_white_card"
        android:orientation="vertical"
        android:elevation="8dp">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C2C54"
            android:layout_gravity="center" />

        <!-- Subheading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to get started"
            android:textSize="14sp"
            android:textColor="#6D6D6D"
            android:layout_marginTop="6dp"
            android:layout_gravity="center" />

        <!-- Name -->
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:hint="Name"
            android:textColor="#000"
            android:textColorHint="#999"
            android:background="@drawable/edittext_bg" />

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:hint="Email"
            android:textColor="#000"
            android:inputType="textEmailAddress"
            android:textColorHint="#999"
            android:background="@drawable/edittext_bg" />

        <!-- Password -->
        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:hint="Password"
            android:textColor="#000"
            android:inputType="textPassword"
            android:textColorHint="#999"
            android:background="@drawable/edittext_bg" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/re_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:hint="Re-enter Password"
            android:textColor="#000"
            android:inputType="textPassword"
            android:textColorHint="#999"
            android:background="@drawable/edittext_bg" />

        <!-- Signup Button -->
        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#6A0DAD"
            android:layout_marginTop="20dp" />

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#6D6D6D" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Login"
                android:textColor="#6A0DAD"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
