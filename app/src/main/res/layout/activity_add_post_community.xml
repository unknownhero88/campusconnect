<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_bg"
    tools:context=".Community.addPost_community">

    <!-- Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community Post"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <!-- Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appTitle"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/rounded_white_card"
            android:elevation="8dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C2C54"/>

            <!-- Post Input -->
            <EditText
                android:id="@+id/AddPostEditText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:hint="Write something for the community..."
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"/>

            <!-- Add Image -->
            <LinearLayout
                android:id="@+id/AddPostImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/edittext_bg">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_camera"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Add Image"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Post Button -->
            <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Post"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/deep_plum"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
