<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".Community.addPost_community">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/header_glass"
        android:background="@drawable/title_box_bg"
        android:elevation="12dp"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Post"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <!-- Content Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_card_glass"
            android:padding="20dp"
            android:elevation="8dp">

            <!-- Post Content Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Content"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Post Input -->
            <EditText
                android:id="@+id/AddPostEditText"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="12dp"
                android:hint="Write something for the community..."
                android:gravity="top"
                android:padding="14dp"
                android:background="@drawable/rounded_input"/>

            <!-- Add Image Row -->
            <LinearLayout
                android:id="@+id/AddPostImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:padding="12dp"
                android:background="@drawable/white_card_glass"
                android:elevation="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@drawable/round_icon_purple"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Add Image"
                    android:textSize="18sp"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Post Button -->
            <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Post"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/deep_plum"
                android:elevation="10dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
