<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_bg"
    tools:context=".LostANDFound.add_lost_found_items">

    <!-- Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Lost / Found"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <!-- Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appTitle"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/rounded_white_card"
            android:elevation="8dp">

            <!-- Toggle -->
            <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lost"
                android:backgroundTint="@color/deep_plum"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Found"
                android:backgroundTint="@color/Pale_Purple"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>


            <!-- Description -->
            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:hint="Describe the item"
                android:gravity="top"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"/>

            <!-- Category -->
            <Spinner
                android:id="@+id/AddPostSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edittext_bg"/>

            <!-- Date & Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Date"
                    android:background="@drawable/edittext_bg"/>

                <View
                    android:layout_width="12dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/editTime"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Time"
                    android:background="@drawable/edittext_bg"/>
            </LinearLayout>

            <!-- Contact -->
            <EditText
                android:id="@+id/editContact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:hint="Phone or Email"
                android:inputType="phone"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"/>

            <!-- Image Picker -->
            <LinearLayout
                android:id="@+id/AddPostImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/edittext_bg">

                <ImageView
                    android:id="@+id/AddPostImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_camera"/>

                <TextView
                    android:id="@+id/imgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Add Image"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Post -->
            <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Post"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/deep_plum"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
